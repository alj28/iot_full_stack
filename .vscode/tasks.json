{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build APP nRF52840-DK",
            "type": "shell",
            "command": "west build --sysbuild",
            "options": {
                "cwd": "${workspaceFolder}/device"
            }
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "west flash",
            "options": {
                "cwd": "${workspaceFolder}/device"
            }
        },
        {
            "label": "Build APP native-posix",
            "type": "shell",
            "command": "west build -b naptive_posix",
            "options": {
                "cwd": "${workspaceFolder}/device"
            }
        },
        {
            "label": "Run APP native-posix",
            "type": "shell",
            "command": "./build/zephyr/zephyr.exe -attach_uart",
            "options": {
                "cwd": "${workspaceFolder}/device"
            }
        },
    ]
}